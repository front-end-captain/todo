{
  "name": "togo-cli",
  "version": "0.0.3-0",
  "description": "A TODO project to be used in the terminal",
  "main": "index.js",
  "files": [
    "lib"
  ],
  "bin": {
    "togo": "bin/index.js"
  },
  "scripts": {
    "eslint": "eslint src/**/*.ts",
    "compile": "tsc --noEmit --diagnostics",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "format:check": "prettier --check src/**/*.{ts,tsx}",
    "release:pre": "np prerelease --tag=beta --yolo --no-2fa --any-branch",
    "release:prod": "np patch --tag=latest --yolo --no-2fa --branch=master",
    "pre:release": "npm run clean && npm run format && npm run eslint",
    "prepublishOnly": "npm run build",
    "build": "rimraf lib && cross-env NODE_ENV=production tsc --pretty",
    "watch": "npm run build -- --watch --diagnostics",
    "commit": "lint-staged && git-cz",
    "test": "jest --env node --runInBand --detectOpenHandles --passWithNoTests",
    "test:coverage": "jest --coverage --color --env node --runInBand --detectOpenHandles --passWithNoTests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/front-end-captain/todo.git"
  },
  "keywords": [
    "TODO",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/front-end-captain/todo/issues"
  },
  "homepage": "https://github.com/front-end-captain/todo#readme",
  "dependencies": {
    "@luban-cli/cli-shared-utils": "^1.4.2",
    "chalk": "^4.1.0",
    "commander": "^6.0.0",
    "dedent": "^0.7.0",
    "fs-extra": "^9.0.1",
    "inquirer": "^7.3.3",
    "md5": "^2.3.0",
    "prettier": "^1.19.1",
    "semver": "^7.3.2",
    "uuid": "^8.3.2",
    "vtils": "^3.32.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/dedent": "^0.7.0",
    "@types/fs-extra": "^9.0.1",
    "@types/hapi__joi": "^16.0.9",
    "@types/inquirer": "^7.3.0",
    "@types/md5": "^2.2.1",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^6.8.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "np": "^7.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "~4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run eslint",
      "npm run format:check"
    ]
  },
  "engines": {
    "node": ">=10"
  }
}
